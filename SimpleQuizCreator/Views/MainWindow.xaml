<Window x:Class="SimpleQuizCreator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:p="clr-namespace:SimpleQuizCreator.Properties"
        prism:ViewModelLocator.AutoWireViewModel="True" Height="350" Width="525" 
        WindowStartupLocation="CenterScreen" Closed="Window_Closed" Icon="/SimpleQuizCreator;component/QuizIcon.ico" 
        Title="{Binding Title}"
         MinWidth="800" MinHeight="400"
        >
    <DockPanel Background="AliceBlue">
        <Menu Height="20" DockPanel.Dock="Top">
            <MenuItem Header="{x:Static p:Resources.MenuItemFile}">
                <MenuItem Header="Save settings"></MenuItem>
                <MenuItem  Header="Close"></MenuItem>
            </MenuItem>
            <MenuItem Header="{x:Static p:Resources.MenuItemHelp}">
                <MenuItem Header="About SimpleQuizCreator"></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Left" Width="140" Background="Bisque">
            <Button Content="{x:Static p:Resources.ButtonHelloContent}" Margin="2" Height="30"  Command="{Binding NavigateCommand}" CommandParameter="HelloView"></Button>
            <Button Content="{x:Static p:Resources.ButtonQuizListContent}" Margin="2" Height="30" Command="{Binding NavigateCommand}" CommandParameter="QuizListView"></Button>
            <Button Content="{x:Static p:Resources.ButtonStartQuizContent}" FontWeight="Bold" Margin="2" Height="30" Command="{Binding NavigateCommand}" CommandParameter="StartQuizView"></Button>
            <Button Content="{x:Static p:Resources.ButtonHistoryContent}"  Margin="2" Height="30" Command="{Binding NavigateCommand}" CommandParameter="HistoryView"></Button>
        </StackPanel>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </DockPanel>
</Window>
