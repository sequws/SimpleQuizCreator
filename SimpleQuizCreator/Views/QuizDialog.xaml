<UserControl x:Class="SimpleQuizCreator.Views.QuizDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="800" Height="460">        
        <TabControl SelectedIndex="{Binding SelectedIndex}">
            <TabItem Header="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding QuizName}"></TextBlock>
                    <TextBlock Text="{Binding SelectedIndex}"></TextBlock>
                    <Button Content="StarQuiz" Command="{Binding StartQuizCommand}"></Button>
                </StackPanel>                
            </TabItem>
            <TabItem Header="2">

            </TabItem>
            <TabItem Header="3" >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Close" Command="{Binding CloseDialogCommand}"></Button>
                </StackPanel>                
            </TabItem>
        </TabControl>
</UserControl>
